                <div class="friendslist">Ella Anderson</div>
                <div class="friendslist">Lucas Ramirez</div>
                <div class="friendslist">Chloe Morgan</div>
            </div>
        </div>
    </div>

    <div>
        <% for (let post of posts) { %>
            <%= post.name %> posted <br>
            <%= post.comment %>
            <%= post.id %>
            <a href="http://localhost:8080/quora/view/<%= post.id %>">View post in detail</a>
            <a href="http://localhost:8080/quora/<%= post.id %>/edit">Edit post</a>
            <br><br><br>
        <% } %>
    </div>
</body>
</html>
